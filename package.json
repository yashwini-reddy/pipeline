
name: Basic CI Workflow

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Show root files
        run: |
          pwd
          ls -la
          echo "package.json exists?"; test -f package.json && echo "YES" || echo "NO"
          echo "First 20 lines of package.json (if present):"
          [ -f package.json ] && head -n 20 package.json || true

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: npm test
